<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FirstFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragment_first_toolbar"
        style="@style/Toolbar"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/fragment_first_toolbar_title" />

    <ImageView
        android:id="@+id/fragment_first_toolbar_action_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/fragment_first_toolbar_action_more_margin_end"
        android:contentDescription="@null"
        android:src="@drawable/ic_more"
        app:layout_constraintBottom_toBottomOf="@id/fragment_first_toolbar"
        app:layout_constraintEnd_toEndOf="@id/fragment_first_toolbar"
        app:layout_constraintTop_toTopOf="@id/fragment_first_toolbar" />

    <ImageView
        android:id="@+id/fragment_first_toolbar_action_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/fragment_first_toolbar_action_search_margin_end"
        android:contentDescription="@null"
        android:src="@drawable/ic_search"
        app:layout_constraintBottom_toBottomOf="@id/fragment_first_toolbar"
        app:layout_constraintEnd_toStartOf="@id/fragment_first_toolbar_action_more"
        app:layout_constraintTop_toTopOf="@id/fragment_first_toolbar" />

    <TextView
        android:id="@+id/fragment_first_title"
        style="@style/TextAppearance.Headline.FragmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_first_title_margin_first"
        android:text="@string/fragment_first_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_first_toolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>