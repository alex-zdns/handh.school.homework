<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FirstFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragment_second_toolbar"
        style="@style/Toolbar"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/fragment_second_toolbar_title" />

    <ImageView
        android:id="@+id/fragment_second_toolbar_action_flashlights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/fragment_second_toolbar_action_margin_end"
        android:contentDescription="@null"
        android:src="@drawable/ic_lamp"
        app:layout_constraintBottom_toBottomOf="@id/fragment_second_toolbar"
        app:layout_constraintEnd_toEndOf="@id/fragment_second_toolbar"
        app:layout_constraintTop_toTopOf="@id/fragment_second_toolbar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_second_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/fragment_second_rv_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_second_toolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>