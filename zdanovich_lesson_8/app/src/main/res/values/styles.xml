<resources>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="elevation">@dimen/toolbar_elevation</item>
        <item name="android:titleTextAppearance">
            @style/TextAppearance.MaterialComponents.Headline1.Toolbar
        </item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline1.Toolbar" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/toolbar_title_line_spacing_extra</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline2.NoteEditFragment" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/warm_grey_four</item>
        <item name="android:textSize">@dimen/note_edit_fragment_title_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/note_edit_fragment_title_line_spacing_extra
        </item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body1.NoteEditFragment" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black_54</item>
        <item name="android:textSize">@dimen/note_edit_fragment_body_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/note_edit_fragment_body_line_spacing_extra
        </item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline2.NoteItem" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black_87</item>
        <item name="android:textSize">@dimen/note_item_title_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/note_item_title_line_spacing_extra</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body1.NoteItem" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/warm_grey_three</item>
        <item name="android:textSize">@dimen/note_item_body_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/note_item_body_line_spacing_extra</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline2.ColorDialogTitle" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black_87</item>
        <item name="android:textSize">@dimen/color_dialog_title_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/color_dialog_title_line_spacing_extra</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Button.ColorDialogCancel" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/teal_two</item>
        <item name="android:textSize">@dimen/color_dialog_cancel_text_size</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline2.NoContent" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black_87</item>
        <item name="android:textSize">@dimen/fnl_no_content_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/fnl_no_content_line_spacing_extra</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources>