<resources>

    <style name="TextAppearance.MaterialComponents.Headline2.AdItemTitle" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/ad_item_title_text_size</item>
        <item name="lineHeight">20sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">@dimen/ad_item_title_line_spacing_extra</item>
        <item name="android:textColor">@color/warm_grey_two</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body1.AdItemMessage" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/ad_item_message_text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="lineHeight">20sp</item>
        <item name="android:lineSpacingExtra">@dimen/ad_item_message_line_spacing_extra</item>
        <item name="android:textColor">@color/charcoal_grey</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body1.AdItemAddress" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/ad_item_address_text_size</item>
        <item name="lineHeight">20sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">@dimen/ad_item_address_line_spacing_extra</item>
        <item name="android:textColor">@color/warm_grey_two</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/charcoal_grey</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline2.OfferAd" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/activity_sixth_offer_ad_text_size</item>
        <item name="lineHeight">20sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textColor">@color/charcoal_grey</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline2.adAll" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/activity_sixth_toolbar_ad_all_text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/tealish</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline2.CollapsingToolbarLayoutTitle" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline2.CollapsingToolbarLayoutSubTitle" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="backgroundTint">@color/purple_700</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>



</resources>