<resources>

    <style name="TextAppearance.MaterialComponents.Headline2.AdItemTitle" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/ad_item_title_text_size</item>
        <item name="lineHeight">20sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:lineSpacingExtra">@dimen/ad_item_title_line_spacing_extra</item>
        <item name="android:textColor">@color/warm_grey_two</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body1.AdItemMessage" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/ad_item_message_text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="lineHeight">20sp</item>
        <item name="android:lineSpacingExtra">@dimen/ad_item_message_line_spacing_extra</item>
        <item name="android:textColor">@color/charcoal_grey</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body1.AdItemAddress" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/ad_item_address_text_size</item>
        <item name="lineHeight">20sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:lineSpacingExtra">@dimen/ad_item_address_line_spacing_extra</item>
        <item name="android:textColor">@color/warm_grey_two</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/charcoal_grey</item>
    </style>

</resources>