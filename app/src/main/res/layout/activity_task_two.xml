<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/task_2_frame"
    tools:context=".TaskTwoActivity">

    <ImageView
        android:id="@+id/task_2_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/task_2_two_square"
        android:text="@string/pushkins_quatrain"
        android:textColor="@color/pushkins_quatrain_color"
        app:layout_constraintBottom_toTopOf="@id/task_2_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/task_2_button"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/task_2_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/task_2_image_view" />


</androidx.constraintlayout.widget.ConstraintLayout>