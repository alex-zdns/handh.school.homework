<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    tools:context=".MainActivity">

    <ru.zdanovich.handhSchoolHomework.views.ColumnChartView
        android:id="@+id/column_chart_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:captionTextColor="@color/white_47"
        app:captionTextSize="@dimen/column_chart_view_caption_text_size"
        app:columnColor="@color/light_gold"
        app:columnLabelTextSize="@dimen/column_chart_view_label_text_size"
        app:columnWidth="@dimen/column_chart_view_column_width"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>