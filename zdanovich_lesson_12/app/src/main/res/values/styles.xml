<resources>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="elevation">@dimen/toolbar_elevation</item>
        <item name="android:titleTextAppearance">
            @style/TextAppearance.MaterialComponents.Headline1.Toolbar
        </item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline1.Toolbar" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/toolbar_title_line_spacing_extra</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline2.BridgeName" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/vhb_bridge_name_text_size</item>
        <item name="android:textColor">@color/black_87</item>
        <item name="android:lineSpacingExtra">@dimen/vhb_bridge_name_line_spacing_extra</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Subtitle1.BridgeTimeDivorces" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/vhb_bridge_time_divorces_text_size</item>
        <item name="android:textColor">@color/brownish_grey_two</item>
        <item name="android:lineSpacingExtra">@dimen/vhb_bridge_time_divorces_line_spacing_extra
        </item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body1.BridgeDescription" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/fbi_bridge_description_text_size</item>
        <item name="android:textColor">@color/brownish_grey_two</item>
        <item name="android:lineSpacingExtra">@dimen/fbi_bridge_description_line_spacing_extra
        </item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>